<h1><%= @cocktail.name %></h1>
<%= link_to 'Add dose', new_cocktail_dose_path(@cocktail) %>
<% @cocktail.doses.each do |dose| %>
  <p><%= dose.description %></p>
  <p><%= dose.ingredient.name %></p>
  <%= link_to 'Delete', dose_path(dose),
    method: :delete,
    data: { confirm: "Are you sure?"} %>
<% end %>
